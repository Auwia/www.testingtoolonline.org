<!doctype html>
<html lang="{{ lang }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ i18n[lang].siteTitle }} â€“ {{ title }}</title>
  <meta name="description" content="{{ description or i18n[lang].meta.description or i18n[lang].siteTagline }}">

  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.ico">
  <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.ico">

  {# Se NON hai definito il filtro |rev in Eleventy, usa la riga sotto al suo posto #}
  <link rel="stylesheet" href="/assets/css/main.min.css">
  {# <link rel="stylesheet" href="{{ '/assets/css/main.min.css' | rev }}"> #}

  <link rel="manifest" href="/assets/manifest.json">

  {# hreflang alternates #}
  {% if pageSlug %}
    {% for L in languages %}
      <link rel="alternate" hreflang="{{ L }}" href="https://www.testingtoolonline.org/{{ L }}/pages/{{ pageSlug }}.html">
    {% endfor %}
    <link rel="alternate" hreflang="x-default" href="https://www.testingtoolonline.org/">
  {% endif %}
</head>
<body ng-app="testApp">
  {% include "header.njk" %}

  <main class="container">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <!-- JS (defer dove possibile) -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular-cookies.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.5.6/ui-bootstrap-tpls.min.js"></script>
  <script src="/assets/lib/moment.js" defer></script>
  <script>
    window.I18N = {{ i18n | json | safe }};
    window.CURRENT_LANG = document.documentElement.getAttribute('lang') || 'en';
  </script>

  <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

  <script src="/assets/js/module_testing_tool.js"></script>
  <script src="/assets/js/controller_testing_tool.js"></script>

  <script>
    if (location.hostname !== 'localhost' && 'serviceWorker' in navigator) {
      navigator.serviceWorker.register('/service_worker.js', { scope: '/' })
        .catch(console.error);
    }
  </script>

</body>
</html>
