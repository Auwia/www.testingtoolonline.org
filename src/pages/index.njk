---
layout: base.njk
pagination:
  data: languages
  size: 1
  alias: lang
permalink: "/{{ lang }}/pages/index.html"
pageSlug: "index"
title: "{{ i18n[lang].siteTitle }}"
---
<h1 class="page-title">{% raw %}{{ 'pages.index.title' | translate }}{% endraw %}</h1>

<div class="container">
  <section class="ttol-panel">
    <p class="lead" style="margin-top:0;">
      {% raw %}{{ 'pages.index.subtitle' | translate }}{% endraw %}
    </p>

    <p>
      <a class="btn btn-primary" href="/{{ lang }}/pages/file_batch_generator.html">
        {% raw %}<span class="glyphicon glyphicon-play"></span> {{ 'pages.index.ctaStart' | translate }}{% endraw %}
      </a>
    </p>

    {{ content | safe }}
  </section>

  <section class="gen-table-wrap">
    <h2>{% raw %}{{ 'pages.index.useful.title' | translate }}{% endraw %}</h2>
    <p>{% raw %}{{ 'pages.index.useful.text' | translate }}{% endraw %}</p>
    <img src="/assets/img/file_configuration.png"
         alt="{% raw %}{{ 'pages.index.useful.alt1' | translate }}{% endraw %}"
         width="359" height="233" loading="lazy" decoding="async">
    <img src="/assets/img/attributes_view.png"
         alt="{% raw %}{{ 'pages.index.useful.alt2' | translate }}{% endraw %}"
         width="755" height="270" loading="lazy" decoding="async">
    <p>
      <a class="btn" href="/{{ lang }}/pages/file_batch_generator.html">
        {% raw %}{{ 'pages.index.useful.cta' | translate }}{% endraw %}
      </a>
    </p>
  </section>

  <section class="gen-table-wrap">
    <h2>{% raw %}{{ 'pages.index.fast.title' | translate }}{% endraw %}</h2>
    <p>{% raw %}{{ 'pages.index.fast.text' | translate }}{% endraw %}</p>
    <img src="/assets/img/file_generated.png"
         alt="{% raw %}{{ 'pages.index.fast.alt' | translate }}{% endraw %}"
         width="645" height="509" loading="lazy" decoding="async">
    <p>
      <a class="btn" href="/{{ lang }}/pages/file_batch_generator.html">
        {% raw %}{{ 'pages.index.fast.cta' | translate }}{% endraw %}
      </a>
    </p>
  </section>

  <section class="gen-table-wrap">
    <h2>{% raw %}{{ 'pages.index.usability.title' | translate }}{% endraw %}</h2>
    <p>{% raw %}{{ 'pages.index.usability.text' | translate }}{% endraw %}</p>
    <img src="/assets/img/save_load.png"
         alt="{% raw %}{{ 'pages.index.usability.alt' | translate }}{% endraw %}"
         width="163" height="77" loading="lazy" decoding="async">
    <p>
      <a class="btn" href="/{{ lang }}/pages/file_batch_generator.html">
        {% raw %}{{ 'pages.index.usability.cta' | translate }}{% endraw %}
      </a>
    </p>
  </section>

  <section class="gen-table-wrap">
    <h2>{% raw %}{{ 'pages.index.security.title' | translate }}{% endraw %}</h2>
    <p>{% raw %}{{ 'pages.index.security.text' | translate }}{% endraw %}</p>
  </section>
</div>

